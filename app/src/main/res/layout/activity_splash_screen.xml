<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    app:layoutDescription="@xml/activity_splash_screen_scene"
    android:id="@+id/motion_splash"
    tools:context=".features.SplashScreen">

    <ImageView
        android:id="@+id/iv_main"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:src="@drawable/ic_splash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/splash_imange_content_description"
        />

    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/getschwifty"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@id/iv_main"
        app:layout_constraintStart_toStartOf="@id/iv_main"
        app:layout_constraintTop_toBottomOf="@id/iv_main" />

</androidx.constraintlayout.motion.widget.MotionLayout>